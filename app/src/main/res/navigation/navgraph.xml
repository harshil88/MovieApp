<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.harshilpadsala.movieapp.ui.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home"
        >
        <action
            android:id="@+id/action_homeFragment_to_categoryScreenFragment"
            app:destination="@id/categoryScreenFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToSaveState="true"/>
    </fragment>
    <fragment
        android:id="@+id/userAccountFragment"
        android:name="com.harshilpadsala.movieapp.ui.UserAccountFragment"
        android:label="UserAccountFragment"
        tools:layout="@layout/fragment_user_account"
        />
    <fragment
        android:id="@+id/categoryScreenFragment"
        android:name="com.harshilpadsala.movieapp.ui.CategoryScreenFragment"
        android:label="CategoryScreenFragment"
        tools:layout="@layout/fragment_category_screen"
        />
</navigation>